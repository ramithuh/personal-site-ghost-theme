{{!< default}}

<div class="content-area">
    <main class="site-main">
        
{{#get "posts" filter="tag:[awards]" limit="all" as |featured|}}
    {{#if featured}}
        <section class="featured-wrapper container">
            <h2 class="featured-title">Awards</h2>
            <div class="featured-feed owl">
                {{#foreach featured visibility="all"}}
                    <article class="{{post_class}}">
                        {{#if feature_image}}
                            <div class="u-placeholder horizontal">
                                <img class="lazyload u-object-fit"
                                    data-srcset="{{> srcset}}" data-sizes="auto"
                                    src="{{img_url feature_image size="s"}}"
                                    srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                    alt="{{title}}">
                            </div>
                        {{/if}}
                        <h3 class="post-title">{{title}}</h3>
                        <a class="u-permalink" href={{url}}
                            aria-label="{{title}}"></a>
                    </article>
                {{/foreach}}
            </div>
        </section>

    {{/if}}
{{/get}}

        <div class="post-feed container medium">
            {{#get "posts"  filter="tag:[awards]+feature_image:null"}}
            {{#foreach posts visibility="all"}}
                {{> "loop"}}
            {{/foreach}}
            {{/get}}
        </div>
        <br>
    </main>
</div>
