{{#get "posts" filter="tag:[publications]" limit="all" as |publication|}}
    {{!-- {{#if featured}} --}}
        <section class="featured-wrapper container">
            <h2 class="featured-title">Publications</h2>
            <div class="featured-feed owl">
                {{#foreach publication visibility="all"}}
                    <article class="{{post_class}}">
                        {{#if feature_image}}
                            <div class="u-placeholder horizontal">
                                <img class="lazyload u-object-fit"
                                    data-srcset="{{> srcset}}" data-sizes="auto"
                                    src="{{img_url feature_image size="m"}}"
                                    srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                    alt="{{title}}">
                            </div>
                        {{/if}}
                        <h3 class="post-title">{{excerpt}}</h3>
                        <a class="u-permalink" href={{url}}
                            aria-label="{{title}}"></a>
                    </article>
                {{/foreach}}
            </div>
        </section>
    {{!-- {{/if}} --}}
{{/get}}